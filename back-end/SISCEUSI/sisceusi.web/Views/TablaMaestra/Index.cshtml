@using Newtonsoft.Json;
@{
    ViewBag.Title = "Index";
    Dictionary<string, object> listaTablaMaestra = ViewData["listaTablaMaestra"] == null ? new Dictionary<string, object>() : (Dictionary<string, object>)ViewData["listaTablaMaestra"];
}

@section scripts_footer {
    <script src="@Url.Content("~/Scripts/Sisceusi/tabla_maestra_index.js")"></script>
}

<div class="container-fluid map-root" id="historia"></div>
<div class="container my-4" id="cuerpo">
    <div class="row">
        <div class="col-12">
            <div class="container m-0 px-0 py-4">
                <div class="row">
                    <div class="col-md-12 col-lg-9 d-flex">
                        <div class="bg-light py-4 pl-0 w-100">
                            <div class="h3 text-cyan">Mantenimiento de Tablas Maestras&nbsp;</div>                            
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-3">
                        <div class="row">
                            <div class="col-12">
                                <a class="btn btn-azul w-100 mb-1" href="@Url.Action("NuevaTablaMaestra", "TablaMaestra")" data-toggle="tooltip" data-placement="top" title="Agregue una nueva tabla maestra">Nuevo tabla</a>
                                <a class="btn btn-plomo w-100 mb-1" href="@Url.Action("MaestroMantenimiento", "Interno")">Regresar</a>
                                <button class="btn btn-warning w-100 mb-1 text-white" data-toggle="tooltip" data-placement="left" title="En este formulario Usted podrá listar y acceder al registro de una nueva tabla o modificar una ya existente. Este formulario permite generar las tablas que posteriormente pueden ser utilizadas como parte de una campaña y sus encuestas."><i class="fas fa-question-circle pr-1"></i>Ayuda</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dropdown-divider"></div>
                <div class="row">
                    <div class="col-12">
                        <form>
                            <div class="form-group init-search">
                                <div class="row">
                                    <div class="col-md-12 col-lg-6">
                                        <label class="font-weight-bold" for="txt-buscar">INGRESE UNA DESCRIPCIÓN&nbsp;<i class="fas fa-question-circle ayuda-tooltip" data-toggle="tooltip" data-placement="right" title="Ingrese una descripción para realizar su búsqueda"></i></label>
                                        <div class="input-group">
                                            <input maxlength="80" class="form-control" type="text" id="txt-buscar" placeholder="Ingrese la descripción de su búsqueda" aria-describedby="inputGroup1" required>
                                            <div class="input-group-append">
                                                <button id="btn-buscar" class="btn btn-azul" type="submit"><i class="fas fa-search px-1"></i>Buscar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 col-lg-6 text-right">
                                        <div class="titulo-avanzado open-avanzado" data-toggle="collapse" href="#busqueda-avanzada" aria-expanded="false" aria-controls="busqueda-avanzada"><span>Búsqueda avanzada&nbsp;<i class="fas fa-sort"></i></span></div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-12 text">
                                        <div class="collapse" id="busqueda-avanzada">
                                            <div class="card card-body">
                                                <div class="row">
                                                    <div class="col-sm-12 text-left">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <div class="form-group">
                                                                    <label class="font-weight-bold" for="txt-titulo-pricipal">SUBTÍTULO</label>
                                                                    <input maxlength="100" class="form-control" type="text" id="txt-titulo-pricipal" placeholder="Subtítulo">
                                                                </div>
                                                            </div>
                                                            <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3">
                                                                <div class="form-group">
                                                                    <label class="font-weight-bold" for="txt-fecha-inicio">FECHA REGISTRO DESDE</label>
                                                                    <input class="form-control" type="date" id="txt-fecha-inicio">
                                                                </div>
                                                            </div>
                                                            <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3">
                                                                <div class="form-group">
                                                                    <label class="font-weight-bold" for="txt-fecha-fin">FECHA REGISTRO HASTA</label>
                                                                    <input class="form-control" type="date" id="txt-fecha-fin">
                                                                </div>
                                                            </div>
                                                            <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3">
                                                                <div class="form-group">
                                                                    <label class="font-weight-bold" for="txt-user">NOMBRE USUARIO REGISTRO</label>
                                                                    <input maxlength="60" class="form-control" type="text" id="usuario" placeholder="Nombre de usuario">
                                                                </div>
                                                            </div>
                                                            <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3">
                                                                <div class="form-group">
                                                                    <label class="font-weight-bold" for="cbo-tipo-usuario">ESTADO</label>
                                                                    <select class="form-control" id="cbo-estado">
                                                                        <option value="-1">-Seleccione un estado-</option>
                                                                        <option value="1">Habilitado</option>
                                                                        <option value="0">Deshabilitado</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-12 text-right">
                                                                <button id="btn-buscar-avanzado" class="btn btn-azul text-white"><i class="fas fa-search pr-1"></i>Buscar</button>
                                                            </div>
                                                            <div class="col-sm-12 text-right">
                                                                <div class="titulo-avanzado close-basico" data-toggle="collapse" href="#busqueda-avanzada" aria-expanded="false" aria-controls="busqueda-avanzada"><span>Búsqueda básica&nbsp;<i class="fas fa-sort"></i></span></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!--&nbsp;-->
                    </div>
                </div>
            </div>
            <div class="container-fluid py-4">
                <div class="row">
                    <div class="col-xs-12 col sm-12 col-lg-10 d-flex align-items-end justify-content-left pl-0">
                        <div class="h5">BANDEJA DE TABLAS MAESTRAS&nbsp;<i class="fas fa-question-circle ayuda-tooltip" data-toggle="tooltip" data-placement="right" title="Bandeja principal donde encontrará todas las tablas maestras registradas"></i></div>
                    </div>
                    <div class="col-xs-12 col sm-12 col-lg-2 text-lg-right pr-0">
                        <button id="btn-exportar" class="btn btn-success w-100">Descargar Excel</button>
                    </div>
                </div>
                <div class="dropdown-divider"></div>
                <div class="row">
                    <div class="col-12 px-0">
                        <div class="table-responsive tabla-principal">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr class="bg-azul text-white">
                                        <th class="text-center" scope="col" style="width: 50px;">
                                            <div class="d-flex justify-content-between align-items-center"><span class="d-flex justify-content-between align-items-center"><i class="fas fa-question-circle mr-1" data-toggle="tooltip" data-placement="right" title="Título de ayuda"></i><span>N°&nbsp;</span></span></div>
                                        </th>
                                        <th scope="col">
                                            <div class="d-flex justify-content-between align-items-center"><span class="d-flex justify-content-between align-items-center"><i class="fas fa-question-circle mr-1" data-toggle="tooltip" data-placement="right" title="Título de ayuda"></i><span>CÓDIGO&nbsp;</span></span><i class="fas fa-sort column-filter" id="tma_idTablaMaestra"></i></div>
                                        </th>
                                        @*<th scope="col" style="min-width: 210px;">
                                            <div class="d-flex justify-content-between align-items-center"><span class="d-flex justify-content-between align-items-center"><i class="fas fa-question-circle mr-1" data-toggle="tooltip" data-placement="right" title="Título de ayuda"></i><span>TÍTULO PRINCIPAL&nbsp;</span></span><i class="fas fa-sort column-filter" id="tma_tituloPrincipal"></i></div>
                                        </th>*@
                                        <th scope="col">
                                            <div class="d-flex justify-content-between align-items-center"><span class="d-flex justify-content-between align-items-center"><i class="fas fa-question-circle mr-1" data-toggle="tooltip" data-placement="right" title="Título de ayuda"></i><span>SUB TÍTULO&nbsp;</span></span><i class="fas fa-sort column-filter" id="tma_subtitulo"></i></div>
                                        </th>
                                        <th scope="col">
                                            <div class="d-flex justify-content-between align-items-center"><span class="d-flex justify-content-between align-items-center"><i class="fas fa-question-circle mr-1" data-toggle="tooltip" data-placement="right" title="Título de ayuda"></i><span>USUARIO REGISTRO&nbsp;</span></span><i class="fas fa-sort column-filter" id="usu_nombres"></i></div>
                                        </th>
                                        <th scope="col">
                                            <div class="d-flex justify-content-between align-items-center"><span class="d-flex justify-content-between align-items-center"><i class="fas fa-question-circle mr-1" data-toggle="tooltip" data-placement="right" title="Título de ayuda"></i><span>FECHA REGISTRO&nbsp;</span></span><i class="fas fa-sort column-filter" id="tma_fechaCreacion"></i></div>
                                        </th>
                                        <th scope="col">
                                            <div class="d-flex justify-content-between align-items-center"><span class="d-flex justify-content-between align-items-center"><i class="fas fa-question-circle mr-1" data-toggle="tooltip" data-placement="right" title="Título de ayuda"></i><span>ESTADO&nbsp;</span></span><i class="fas fa-sort column-filter" id="tma_idEstado"></i></div>
                                        </th>
                                        <th class="text-center" scope="col" style="min-width:150px;">
                                            <div class="d-flex justify-content-center align-items-center"><span class="d-flex justify-content-between align-items-center"><span>GESTIÓN</span></span></div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td class="text-left pl-0" colspan="3"><span>Resultado:&nbsp;</span><span class="inicio-registros">1</span><span id="view-page-result">-<span class="fin-registros">1</span> de <span class="total-registros">1</span> registros</span></td>
                                        <td id="viewPagination" class="text-right text-xs-left pr-0" colspan="5" style="display: none">
                                            <span>Registros por página&nbsp;</span>
                                            <select id="number-registers">
                                                <option value="10" selected>10</option>
                                                <option value="25">25</option>
                                                <option value="50">50</option>
                                                <option value="100">100</option>
                                            </select>&nbsp;
                                            <span class="pagina">1</span> de <span class="total-paginas">75</span> páginas&nbsp;
                                            <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                                <button class="btn btn-success" type="button" onclick="cambiarPagina(1)"><i class="fas fa-angle-double-left"></i></button>
                                                <button class="btn btn-success" type="button" onclick="cambiarPagina(2)"><i class="fas fa-angle-left"></i></button>
                                                <input class="ir-pagina" type="number" value="1" min="1">
                                                <button class="btn btn-success" type="button" onclick="cambiarPagina(3)"><i class="fas fa-angle-right"></i></button>
                                                <button class="btn btn-success" type="button" onclick="cambiarPagina(4)"><i class="fas fa-angle-double-right"></i></button>
                                            </div>
                                        </td>
                                    </tr>
                                </tfoot>                                
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalConfirmacion" tabindex="-1" role="dialog" aria-labelledby="modalConfirmacionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalChatBotLabel">Confirmación</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="swal2-icon swal2-question swal2-icon-show" style="display: flex;">
                            <div class="swal2-icon-content"><i class="fas fa-ban"></i></div>
                        </div>
                        <h3 class="text-center">¿Deshabilitar el registro?</h3>
                        <p class="text-center">Por favor confirme está acción para deshabilitar el registro seleccionado a continuación.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                <button class="btn btn-danger" id="eliminacionRow" type="button">Aceptar</button>
            </div>
        </div>
    </div>
</div>
@Html.Hidden("column", "tma_idTablaMaestra")
@Html.Hidden("order", "ASC")

<script type="text/javascript">
    var listaTablaMaestra = @Html.Raw(JsonConvert.SerializeObject(listaTablaMaestra));
</script>

