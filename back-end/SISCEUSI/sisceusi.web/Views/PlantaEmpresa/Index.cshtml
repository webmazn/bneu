@using sisceusi.entidad
@{
    ViewBag.Title = "Index";
    Dictionary<string, object> lista = ViewData["listaPlanta"] == null ? new Dictionary<string, object>() : (Dictionary<string, object>)ViewData["listaPlanta"];
    EmpresaIndustriaBE empresa = ViewData["empresa"] == null ? new EmpresaIndustriaBE() : (EmpresaIndustriaBE)ViewData["empresa"];
    List<ParametroBE> listaCiuu = ViewData["listaCiuu"] == null ? new List<ParametroBE>() : (List<ParametroBE>)ViewData["listaCiuu"];
    List<DepartamentoBE> listaDepartamento = ViewData["listaDepartamento"] == null ? new List<DepartamentoBE>() : (List<DepartamentoBE>)ViewData["listaDepartamento"];
    List<ProvinciaBE> listaProvincia = ViewData["listaProvincia"] == null ? new List<ProvinciaBE>() : (List<ProvinciaBE>)ViewData["listaProvincia"];
    List<DistritoBE> listaDistrito = ViewData["listaDistrito"] == null ? new List<DistritoBE>() : (List<DistritoBE>)ViewData["listaDistrito"];
    int id = empresa.idEmpresaIndustria;
}

@section scripts_footer {
    <script src="@Url.Content("~/Scripts/Sisceusi/planta_index.js")"></script>
}

<div class="container-fluid map-root" id="historia"></div>
<div class="container my-4" id="cuerpo">
    <div class="row">
        <div class="col-12">
            <div class="container m-0 px-0 py-4">
                <div class="row">
                    <div class="col-md-12 col-lg-9 d-flex">
                        <div class="bg-light py-4 pl-0 w-100">
                            <div class="h3 text-cyan">Plantas de la Empresa -&nbsp;<b>@empresa.nombreEmpresa</b></div>                            
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-3">
                        <div class="row">
                            <div class="col-12">
                                <a class="btn btn-azul w-100 mb-1" href="@Url.Action("NuevaPlanta", "PlantaEmpresa", new { id = id })" data-toggle="tooltip" data-placement="top" title="Agregue una nueva planta">Nueva planta</a>
                                <a class="btn btn-plomo w-100 mb-1" href="@Url.Action("Index", "EmpresaIndustria")">Regresar</a>
