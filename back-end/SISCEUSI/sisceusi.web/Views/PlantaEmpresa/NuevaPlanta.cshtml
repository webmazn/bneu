
@{
    ViewBag.Title = "NuevaPlanta";
    int id = ViewData["idPlantaEmpresa"] == null ? 0 : (int)ViewData["idPlantaEmpresa"];
    int idEmpresaIndustria = ViewData["idEmpresaIndustria"] == null ? 0 : (int)ViewData["idEmpresaIndustria"];
}

@section scripts_footer {
    <script src="@Url.Content("~/Scripts/Sisceusi/planta_nueva_planta.js")"></script>
}

<div class="container-fluid map-root" id="historia"></div>
<div class="container my-4" id="cuerpo">
    <div class="row">
        <div class="col-12">
            <div class="container m-0 px-0 py-4">
                <div class="row">
                    <div class="col-md-12 col-lg-9">
                        <div class="bg-light p-4">
                            <div class="h4 text-cyan">Plantas de la Empresa -&nbsp;<b>NUEVA PLANTA</b></div>
                            <p class="m-0 text-muted">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Quaerat nostrum exercitationem, accusantium id fugit perspiciatis laboriosam, aliquam ut vero architecto cumque, placeat voluptas suscipit? Illo iusto soluta molestias fugit dolorum!</p>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-3">
                        <div class="row">
                            <div class="col-12">
                                <!--span(data-toggle="modal", data-target="#modal-usuario")--><a class="btn btn-azul w-100 mb-3" href="@Url.Action("Index", "PlantaEmpresa", new {id = idEmpresaIndustria })" data-toggle="tooltip" data-placement="top" title="Agregue un nueva planta">Bandeja de plantas</a><a class="btn btn-plomo w-100 mb-3" href="javascript:history.back()">Regresar</a>
                                <button class="btn btn-warning w-100 mb-3 text-white" data-toggle="tooltip" data-placement="left" title="Lorem ipsum dolor sit amet consectetur adipisicing elit. Quidem ipsum voluptate, repudiandae aperiam ducimus eaque cum? Ipsum, similique quae excepturi at quisquam obcaecati modi nulla debitis corrupti minima eum iusto!"><i class="fas fa-question-circle pr-1"></i>Ayuda</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dropdown-divider"></div>
                <form id="frm">
                    <div class="row">
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-codigo">DIRECCIÓN</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <input class="form-control" type="text" id="txt-direccion" maxlength="120" placeholder="Ingrese su dirección" aria-describedby="inputGroup7" required>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="cbo-ciuu">CIUU</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <select class="form-control" id="cbo-ciuu" aria-describedby="inputGroup10" required>
                                </select>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-telefono">TELÉFONO</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <input class="form-control" type="text" id="txt-telefono" maxlength="20" placeholder="Ingrese su teléfono" aria-describedby="inputGroup6" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xm-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-latitud">UBICACIÓN - LATITUD</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <input class="form-control" type="text" id="txt-latitud" maxlength="20" placeholder="Ingrese su latitud" aria-describedby="inputGroup3" required>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-longitud">UBICACIÓN - LONGITUD</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <input class="form-control" type="text" id="txt-longitud" maxlength="20" placeholder="Ingrese su longitud" aria-describedby="inputGroup3" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="cbo-departamento">DEPARTAMENTO</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <select class="form-control" id="cbo-departamento">
                                </select>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="cbo-provincia">PROVINCIA</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <select class="form-control" id="cbo-provincia">
                                </select>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="cbo-distrito">DISTRITO</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <select class="form-control" id="cbo-distrito">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div class="row">
                        <div class="col-6"></div>
                        <div class="col-xm-12 col-sm-12 col-md-6 col-lg-6 seccion-mensaje">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xm-12 col-sm-12 col-md-6 col-lg-6"><small class="text-danger d-block"><strong>(*)&nbsp; Campos obligatorios</strong></small></div>
                        <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3 text-right"><a class="btn btn-plomo w-100 mb-3" href="javascript:history.back()">Regresar</a></div>
                        <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3 text-right">
                            <button id="btn-grabar" class="btn btn-info w-100 mb-3" type="button" href="javascript:void(0)">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="identificador" value="@id" />
<input type="hidden" id="identificador-parent" value="@idEmpresaIndustria" />

