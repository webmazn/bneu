@using sisceusi.entidad
@{
    ViewBag.Title = "Formulario";
    ControlEncuestaBE controlEncuesta = ViewData["controlEncuesta"] == null ? null : (ControlEncuestaBE)ViewData["controlEncuesta"];
    DateTime fechaActual = DateTime.Now;
}

@section scripts_footer {
    <script src="@Url.Content("~/Scripts/Sisceusi/encuesta_formulario.js")"></script>
}

<div class="container-fluid map-root" id="historia"></div>
<div class="container my-4" id="cuerpo">
    <div class="row">
        <div class="col-12">
            <div class="container m-0 px-0 py-4">
                <div class="row">
                    <div class="col-12 d-flex">
                        <div class="bg-light w-100 p-4">
                            <div class="h4 text-cyan">Denominación Título Campaña - ENC0001</div>
                        </div>
                    </div>
                </div>
                <div class="dropdown-divider"></div>
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3">
                                <div class="form-group">
                                    <label class="font-weight-bold" for="txt-fecha-encuesta">FECHA DE LA ENCUESTA</label>
                                    <input class="form-control" type="date" value="@fechaActual.ToString("yyyy-MM-dd")" id="txt-fecha-encuesta" readonly>
                                </div>
                            </div>
                            <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3">
                                <div class="form-group">
                                    <label class="font-weight-bold" for="txt-hora-encuesta">HORA DE LA ENCUESTA</label>
                                    <input class="form-control" type="time" value="@fechaActual.ToString("HH:mm")" id="txt-hora-encuesta" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="font-weight-bold" for="txt-departamento">DIV. POLÍTICA - DEPARTAMENTO</label>
                                        <input class="form-control" type="text" id="txt-departamento" value="@controlEncuesta.plantaEmpresa.departamento.departamento" readonly>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="font-weight-bold" for="txt-departamento">DIVISIÓN POLÍTICA - PROVINCIA</label>
                                        <input class="form-control" type="text" id="txt-provincia" value="@controlEncuesta.plantaEmpresa.provincia.provincia" readonly>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3">
                                <div class="form-group">
                                    <label class="font-weight-bold" for="txt-departamento">DIVISIÓN POLÍTICA - DISTRITO</label>
                                    <input class="form-control" type="text" id="txt-distrito" value="@controlEncuesta.plantaEmpresa.distrito.distrito" readonly>
                                </div>
                            </div>
                            <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3">
                                <div class="form-group">
                                    <label class="font-weight-bold" for="txt-departamento">ZONA</label>
                                    <input class="form-control" type="text" id="txt-zona" value="@controlEncuesta.plantaEmpresa.zona.zona" readonly>
                                </div>
                            </div>
                            <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label class="font-weight-bold" for="txt-direccion">DIRECCIÓN EXACTA DE LA EMPRESA</label>
                                    <input class="form-control" type="text" id="txt-direccion" value="@controlEncuesta.plantaEmpresa.direccion" readonly>
                                </div>
                            </div>
                            <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label class="font-weight-bold" for="txt-servicio-electrico">EMPRESA DE SERVICIO DE ELECTRICIDAD<i class="fas fa-question-circle ayuda-tooltip ml-1" data-toggle="tooltip" data-placement="top" title="Texto de ayuda"></i></label>
                                    <input class="form-control" type="text" id="txt-servicio-electrico" value="@controlEncuesta.plantaEmpresa.empresaLuz.empresaLuz" readonly>
                                </div>
                            </div>
                            <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label class="font-weight-bold" for="txt-gas-natural">EMPRESA SERVICIO GAS NATURAL<i class="fas fa-question-circle ayuda-tooltip ml-1 ml-1" data-toggle="tooltip" data-placement="top" title="Texto de ayuda"></i></label>
                                    <input class="form-control" type="text" id="txt-gas-natural" value="@controlEncuesta.plantaEmpresa.empresaGas.empresaGas" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dropdown-divider my-4"></div>
                <div class="row">
                    <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3">
                        <button class="btn btn-warning w-100 mb-3 text-white" data-toggle="tooltip" data-placement="top" title="Lorem ipsum dolor sit amet consectetur adipisicing elit. Quidem ipsum voluptate, repudiandae aperiam ducimus eaque cum? Ipsum, similique quae excepturi at quisquam obcaecati modi nulla debitis corrupti minima eum iusto!"><i class="fas fa-question-circle pr-1"></i>Ayuda</button>
                    </div>
                    <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3"></div>
                    <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3"><a class="btn btn-plomo w-100 mb-3" href="@Url.Action("Index", "Interno")">Salir</a></div>
                    <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3"><a class="btn btn-azul w-100 mb-3" id="btn-continuar" href="javascript:void(0)">Continuar</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="identificador" value="@controlEncuesta.idControlEncuesta" />
<input type="hidden" id="fecha-encuesta" value="@fechaActual" />

