@using sisceusi.entidad
@{
    ViewBag.Title = "ReporteGeneral";
    //List<ReporteBE> listaReporte = ViewData["listaReporte"] == null ? new List<ReporteBE>() : (List<ReporteBE>)ViewData["listaReporte"];
    //List<CampanaEncuestaBE> listaCampanaEncuesta = ViewData["listaCampanaEncuesta"] == null ? new List<CampanaEncuestaBE>() : (List<CampanaEncuestaBE>)ViewData["listaCampanaEncuesta"];
    List<CampanaBE> listaCampana = ViewData["listaCampana"] == null ? new List<CampanaBE>() : (List<CampanaBE>)ViewData["listaCampana"];
}

@section scripts_footer {
    <script src="@Url.Content("~/Scripts/Sisceusi/interno_reporte_general.js")"></script>
}

<div class="container mt-4" id="cuerpo">
    <div class="row">
        <div class="col-12">
            <div class="container m-0 px-0 pt-4">
                <div class="row">
                    <div class="col-12 d-flex">
                        <div class="bg-light w-100 p-4">
                            <div class="h4 text-cyan">Generación de reportes</div>
                        </div>
                    </div>
                </div>
                <div class="dropdown-divider my-4"></div>
                <div class="row">
                    <div class="col-xm-12 col-sm-12 col-md-5 col-lg-5">
                        <div class="form-group">
                            <label class="font-weight-bold" for="txt-titulo-pricipal">LISTA DE CAMPAÑAS</label>
                            <select class="form-control" id="cbo-campana">
                                <option value="0">-Seleccione una campaña-</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                        <div class="row">
                            <div class="col-12">
                                <label class="font-weight-bold" for="txt-fecha-inicio">SECCIONES DE LA ENCUESTA</label>
                                <select class="form-control" id="cbo-tabla-maestra">
                                    <option value="0">-Seleccione una campaña-</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3 text-right">
                        <label>&nbsp;</label>
                        <div class="btn-group w-100">
                            <button id="btn-reporte" class="btn btn-azul w-100 ml-auto" type="button"><i class="fas fa-search px-1"></i>Generar</button>
                            <div class="btn-group w-100">
                                <button class="btn btn-success dropdown-toggle sb-left" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Descargar</button>
                                <div class="dropdown-menu">
                                    <a id="btn-excel" class="dropdown-item" href="javascript:void(0)">Formato Excel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dropdown-divider my-4"></div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mb-4">
    <div class="row mb-4">
        <div class="col-12 mb-4">
            <div class="table-responsive tabla-principal">
                <table class="table table-striped table-hover">
                    <thead>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var listaCampana = @Html.Raw(Json.Encode(listaCampana));
</script>

