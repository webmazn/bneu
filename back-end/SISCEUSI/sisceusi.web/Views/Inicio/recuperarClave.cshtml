
@{
    ViewBag.Title = "recuperarClave";
}

@section scripts_header{
    <script src="https://www.google.com/recaptcha/api.js"></script>
}

@section scripts_footer {
    <script src="@Url.Content("~/Scripts/Sisceusi/inicio_recuperar_clave.js")"></script>
}

<div class="container-fluid banner d-flex flex-row justify-content-center align-items-center" id="carousel">
    <div class="flecha d-none" id="enlaceAspectos"><i class="fas fa-angle-double-right fa-2x text-white btn-slider-bottom"></i></div>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-2 d-flex flex-row justify-content-center align-items-center wrap-slider-left"><i class="fas fa-chevron-left fa-3x text-white btn-slider-left d-none"></i></div>
            <div class="col-md-8 col-sm-12 text-center">
                <div class="row">
                    <div class="col-12 d-flex flex-row justify-content-center align-items-end">
                        <div class="slider-pagging d-none"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-2 d-flex flex-row justify-content-center align-items-center wrap-slider-right"><i class="fas fa-chevron-right fa-3x text-white btn-slider-right d-none"></i></div>
        </div>
        <div class="row dentro-banner rounded">
            <div class="col-md-6 col-lg-8 p-4 d-none d-md-block bg-img-recuperar">
                <div class="h-100 w-100 d-flex align-items-center justify-content-center">
                    <p class="p-0 m-0 linea-derecha lead text-white animated bounceInUp">Accede a nuestra plataforma de <br><strong>Balance Nacional de Energía Útil <br></strong>recupere su clave de acceso con su&nbsp;<strong>correo electrónico.</strong></p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 p-4 bg-light rounded-right">
                <div class="h4">Reestablecer <br><small class="text-muted">recupere su acceso</small></div>
                <form class="pt-4" id="frmRecuperarClave" action="./index.html">
                    <div class="form-group">
                        <label for="txt-user">Correo electrónico</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup1"><i class="fas fa-envelope"></i></span></div>
                            <input class="form-control" maxlength="30" type="email" id="txt-correo" placeholder="Tu dirección de email" aria-describedby="inputGroup1" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-user">D.N.I.</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup1"><i class="fas fa-id-card"></i></span></div>
                            <input class="form-control integer-positivo" maxlength="8" type="text" id="txt-dni" placeholder="Tu número de documento" aria-describedby="inputGroup1" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="g-recaptcha" data-sitekey="@System.Configuration.ConfigurationManager.AppSettings["ReCAPTCHA_Site_Key"]"></div>
                    </div>
                    <div class="seccion-mensaje">
                    </div>
                    <button id="btn-recuperar" class="btn-lg btn-primary w-100" type="submit"> Recuperar</button>
                </form>
                <p class="pt-4 mb-0 text-center"><small>¿No tienes una cuenta?&nbsp;</small><a class="link-verde" href="@Url.Action("Index", "IntencionParticipar")"><small>Regístrar mi empresa</small></a></p>
            </div>
        </div>
    </div>
</div>

