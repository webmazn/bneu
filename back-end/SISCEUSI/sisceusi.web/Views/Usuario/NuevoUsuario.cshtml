@using sisceusi.entidad
@{
    ViewBag.Title = "NuevoUsuario";
    int id = ViewData["idUsuario"] == null ? 0 : (int)ViewData["idUsuario"];
    UsuarioBE usuario = ViewData["usuario"] == null ? null : (UsuarioBE)ViewData["usuario"];
    List<RolBE> listaRol = ViewData["listaRol"] == null ? new List<RolBE>() : (List<RolBE>)ViewData["listaRol"];
}

@section scripts_footer {
    <script src="@Url.Content("~/Scripts/Sisceusi/usuario_nuevo_usuario.js")"></script>
}

<div class="container-fluid map-root" id="historia"></div>
<div class="container my-4" id="cuerpo">
    <div class="row">
        <div class="col-12">
            <div class="container m-0 px-0 py-4">
                <div class="row">
                    <div class="col-md-12 col-lg-9">
                        <div class="bg-light p-4">
                            <div class="h4 text-cyan">Mantenimiento de Usuarios&nbsp;</div>
                            <p class="m-0 text-muted">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Quaerat nostrum exercitationem, accusantium id fugit perspiciatis laboriosam, aliquam ut vero architecto cumque, placeat voluptas suscipit? Illo iusto soluta molestias fugit dolorum!</p>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-3">
                        <div class="row">
                            <div class="col-12">
                                <a class="btn btn-azul w-100 mb-3" href="@Url.Action("Index", "Usuario")" data-toggle="tooltip" data-placement="top" title="Agregue un nuevo usuario con un rol específico">Bandeja de usuarios</a><a class="btn btn-plomo w-100 mb-3" href="@Url.Action("Index", "Usuario")">Regresar</a>
                                <button class="btn btn-warning w-100 mb-3 text-white" data-toggle="tooltip" data-placement="left" title="Lorem ipsum dolor sit amet consectetur adipisicing elit. Quidem ipsum voluptate, repudiandae aperiam ducimus eaque cum? Ipsum, similique quae excepturi at quisquam obcaecati modi nulla debitis corrupti minima eum iusto!"><i class="fas fa-question-circle pr-1"></i>Ayuda</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dropdown-divider"></div>
                <form id="frm">
                    <div class="row">
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-ruc">R.U.C.</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <div class="input-group">
                                    <input class="form-control" type="text" id="txt-ruc" maxlength="11" placeholder="Ingrese su RUC" aria-describedby="inputGroup7" required>
                                    <div class="input-group-append">
                                        <button id="btn-verificar" class="btn btn-azul" type="button"><i class="fas fa-search px-1"></i>Verificar</button>
                                    </div>
                                </div>
                            </div>
                        </div>                        
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-institucion">NOMBRE DE LA EMPRESA</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <input class="form-control" type="text" id="txt-institucion" maxlength="100" placeholder="Ingrese su institución" aria-describedby="inputGroup6" required>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-correo">CORREO ELECTRÓNICO</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <input class="form-control" type="text" id="txt-correo" maxlength="80" placeholder="Dirección de email" aria-describedby="inputGroup1" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-nombre">NOMBRES</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <input class="form-control" type="text" id="txt-nombre" maxlength="80" placeholder="Ingrese su nombre" aria-describedby="inputGroup3" required>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-dni">D.N.I.</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <input class="form-control" type="text" id="txt-dni" maxlength="8" placeholder="Ingrese su DNI" aria-describedby="inputGroup7" required>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-telefono">TELÉFONO DEL CONTACTO</label>
                                <input class="form-control" type="text" id="txt-telefono" maxlength="20" placeholder="Ingrese su teléfono" aria-describedby="inputGroup11" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-pswd">CONTRASEÑA</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <input class="form-control" type="password" id="txt-pswd" maxlength="20" placeholder="Ingresar contraseña" aria-describedby="inputGroup2" required>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="cbo-perfil">PERFIL</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <select class="form-control" id="cbo-perfil" aria-describedby="inputGroup10" required>
                                </select>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="cbo-estado">ESTADO</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <select class="form-control" id="cbo-estado" aria-describedby="inputGroup10" required>
                                    <option value="-1">-Seleccione un estado-</option>
                                    <option value="1">Habilitado</option>
                                    <option value="0">Deshabilitado</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div class="row">
                        <div class="col-6"></div>
                        <div class="col-xm-12 col-sm-12 col-md-6 col-lg-6 seccion-mensaje">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xm-12 col-sm-12 col-md-6 col-lg-6"><small class="text-danger d-block"><strong>(*)&nbsp; Campos obligatorios</strong></small></div>
                        <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3 text-right"><a class="btn btn-plomo w-100 mb-3" href="@Url.Action("Index", "Usuario")">Regresar</a></div>
                        <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3 text-right">
                            <button id="btn-grabar" class="btn btn-info w-100 mb-3" type="button" href="javascript:void(0)">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="identificador" value="@id" />
<script type="text/javascript">
    var usuario = @Html.Raw(Json.Encode(usuario));
    var listaRol = @Html.Raw(Json.Encode(listaRol));
</script>
