
@{
    ViewBag.Title = "IntencionParticipar";
}

@section scripts_header{
    <script src="https://www.google.com/recaptcha/api.js"></script>
}

@section scripts_footer {
    <script src="~/Scripts/Sisceusi/intencion_participar_index.js"></script>
}

<div class="container-fluid banner d-flex flex-row justify-content-center align-items-center" id="carousel">
    <div class="flecha d-none" id="enlaceAspectos"><i class="fas fa-angle-double-right fa-2x text-white btn-slider-bottom"></i></div>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-2 d-flex flex-row justify-content-center align-items-center wrap-slider-left"><i class="fas fa-chevron-left fa-3x text-white btn-slider-left d-none"></i></div>
            <div class="col-md-8 col-sm-12 text-center">
                <div class="row">
                    <div class="col-12 d-flex flex-row justify-content-center align-items-end">
                        <div class="slider-pagging d-none"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-2 d-flex flex-row justify-content-center align-items-center wrap-slider-right"><i class="fas fa-chevron-right fa-3x text-white btn-slider-right d-none"></i></div>
        </div>
        <div class="row dentro-banner rounded">
            <div class="col-md-6 col-lg-8 p-4 d-none d-md-block bg-img-login">
                <div class="h-100 w-100 d-flex align-items-center justify-content-center">
                    <p class="p-0 m-0 linea-derecha lead text-white animated bounceInUp">Accede a nuestra plataforma de <br><strong>Balance Nacional de Energía Útil <br></strong>completando todos los&nbsp;<strong>datos personales</strong></p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 p-4 bg-light rounded-right">
                <div class="h4">Registro de intensión <br><small class="text-muted">de participar en una campaña</small></div>
                <form class="pt-4" id="frmLogin" action="@Url.Action("Index", "Inicio")" autocomplete="off">
                    <div class="form-group">
                        <label for="txt-user">R.U.C.</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup2"><i class="fas fa-landmark"></i></span></div>
                            <input class="form-control" type="text" id="RUC" placeholder="Tu número de RUC" aria-describedby="inputGroup2" maxlength="11" title="Tu número de RUC" autocomplete="new-user" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-user">Nombre de la empresa</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup1"><i class="fas fa-landmark"></i></span></div>
                            <input class="form-control" type="text" id="EMPRESA" placeholder="Tu nombre de empresa" aria-describedby="inputGroup1" maxlength="80" title="Tu nombre de empresa" autocomplete="new-user" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-user">Correo electrónico</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup1"><i class="fas fa-envelope"></i></span></div>
                            <input class="form-control" type="email" id="USUARIO" placeholder="Tu dirección de email" aria-describedby="inputGroup1" maxlength="70" pattern="^[a-zA-Z0-9.!#$%&amp;’*+/=?^_`{|}~-]+@("@")[a-zA-Z0-9-]+(?:.[a-zA-Z0-9-]+)*$" title="Ingrese una dirección de correo válida." autocomplete="new-user" max="70" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-user">Representante legal</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup3"><i class="fas fa-user"></i></span></div>
                            <input class="form-control" type="text" id="REPLEGAL" placeholder="Tu nombre representante" aria-describedby="inputGroup3" maxlength="70" title="Tu nombre representante" autocomplete="new-user" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-user">D.N.I.</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup4"><i class="fas fa-id-card"></i></span></div>
                            <input class="form-control" type="text" id="DNI" placeholder="Tu número de DNI" aria-describedby="inputGroup4" maxlength="8" title="Tu número de DNI" autocomplete="new-user" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-user">Teléfono de contacto</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup5"><i class="fas fa-phone-alt"></i></span></div>
                            <input class="form-control" type="text" id="TEL" placeholder="Tu teléfono de contacto" aria-describedby="inputGroup5" maxlength="16" title="Tu teléfono de contacto" autocomplete="new-user" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="g-recaptcha" data-sitekey="@System.Configuration.ConfigurationManager.AppSettings["ReCAPTCHA_Site_Key"]"></div>
                    </div>
                    <button class="btn-lg btn-azul w-100" type="submit">Registrar</button>
                </form>
            </div>
        </div>
    </div>
</div>

