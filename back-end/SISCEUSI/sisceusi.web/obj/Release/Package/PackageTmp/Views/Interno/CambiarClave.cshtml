
@{
    ViewBag.Title = "CambiarClave";
}

@section scripts_header{
    <script src="https://www.google.com/recaptcha/api.js"></script>
}

@section scripts_footer {
    <script src="~/Scripts/Sisceusi/interno_cambiar_clave.js"></script>
}

<div class="container-fluid banner d-flex flex-row justify-content-center align-items-center" id="carousel">
    <div class="flecha d-none" id="enlaceAspectos"><i class="fas fa-angle-double-right fa-2x text-white btn-slider-bottom"></i></div>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-2 d-flex flex-row justify-content-center align-items-center wrap-slider-left"><i class="fas fa-chevron-left fa-3x text-white btn-slider-left d-none"></i></div>
            <div class="col-md-8 col-sm-12 text-center">
                <div class="row">
                    <div class="col-12 d-flex flex-row justify-content-center align-items-end">
                        <div class="slider-pagging d-none"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-2 d-flex flex-row justify-content-center align-items-center wrap-slider-right"><i class="fas fa-chevron-right fa-3x text-white btn-slider-right d-none"></i></div>
        </div>
        <div class="row dentro-banner rounded">
            <div class="col-md-6 col-lg-8 p-4 d-none d-md-block bg-img-recuperar">
                <div class="h-100 w-100 d-flex align-items-center justify-content-center">
                    <p class="p-0 m-0 linea-derecha lead text-white animated bounceInUp">Cambie su clave en nuestra plataforma de <br><strong>Balance Nacional de Energía Útil <br></strong>recupere su clave de acceso con su&nbsp;<strong>complete los campos requeridos</strong></p>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 p-4 bg-light rounded-right">
                <div class="h4">Cambiar <br><small class="text-muted">su clave de acceso</small></div>
                <form class="pt-4" id="frmRecuperarClave" action="./index.html">
                    <div class="form-group">
                        <label for="txt-user">Contraseña actual</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup2"><i class="fas fa-key"></i></span></div>
                            <input class="form-control" type="password" id="txt-pswd-now" placeholder="Tu contraseña actual" aria-describedby="inputGroup2" maxlength="30" title="Ingrese su contraseña actual." autocomplete="new-password" required>
                            <div class="input-group-append">
                                <label class="input-group-text cursor-pointer ver-clave"><i class="fas fa-eye mr-1"></i>Mostrar</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-user">Contraseña nueva</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup2"><i class="fas fa-key"></i></span></div>
                            <input class="form-control" type="password" id="txt-pswd-new" placeholder="Tu contraseña nueva" aria-describedby="inputGroup2" maxlength="30" title="Ingrese su contraseña nueva." autocomplete="new-password" required>
                            <div class="input-group-append">
                                <label class="input-group-text cursor-pointer ver-clave"><i class="fas fa-eye mr-1"></i>Mostrar</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txt-user">Confirmar contraseña</label>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="inputGroup2"><i class="fas fa-key"></i></span></div>
                            <input class="form-control" type="password" id="txt-pswd-conf" placeholder="confirma tu contraseña" aria-describedby="inputGroup2" maxlength="30" title="Ingrese su contraseña confirmándola." autocomplete="new-password" required>
                            <div class="input-group-append">
                                <label class="input-group-text cursor-pointer ver-clave"><i class="fas fa-eye mr-1"></i>Mostrar</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="g-recaptcha" data-sitekey="@System.Configuration.ConfigurationManager.AppSettings["ReCAPTCHA_Site_Key"]"></div>
                    </div>
                    <div class="seccion-mensaje">
                    </div>
                    <button id="btn-cambiar" class="btn-lg btn-primary w-100" type="submit">Cambiar</button>
                </form>
            </div>
        </div>
    </div>
</div>

