@using Newtonsoft.Json;
@using sisceusi.entidad
@{
    ViewBag.Title = "NuevoParametro";
    int id = ViewData["idParametro"] == null ? 0 : (int)ViewData["idParametro"];
    ParametroBE parametro = ViewData["parametro"] == null ? null : (ParametroBE)ViewData["parametro"];
    List<ParametroBE> listaParametro = ViewData["listaParametro"] == null ? new List<ParametroBE>() : (List<ParametroBE>)ViewData["listaParametro"];
}

@section scripts_footer {
    <script src="@Url.Content("~/Scripts/Sisceusi/parametro_nuevo_parametro.js")"></script>
}

<div class="container-fluid map-root" id="historia"></div>
<div class="container my-4" id="cuerpo">
    <div class="row">
        <div class="col-12">
            <div class="container m-0 px-0 py-4">
                <div class="row">
                    <div class="col-md-12 col-lg-9 d-flex">
                        <div class="bg-light py-4 pl-0 w-100">
                            <div class="h3 text-cyan">Mantenimiento de Parámetros&nbsp;</div>                            
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-3">
                        <div class="row">
                            <div class="col-12">
                                <a class="btn btn-azul w-100 mb-1" href="@Url.Action("Index", "Parametro")" data-toggle="tooltip" data-placement="top" title="Ir a la bandeja de parámetros">Bandeja de parámetros</a>
                                <a class="btn btn-plomo w-100 mb-1" href="@Url.Action("Index", "Parametro")">Regresar</a>
                                <button class="btn btn-warning w-100 mb-1 text-white" data-toggle="tooltip" data-placement="left" title="Registre en nombre del parámetro del código y texto que desea que forme parte del parámetro seleccionado, el paren parámetro es el nombre del grupo al que pertenecerá el parámetro que usted está ingresando o modificando. El tipo de parámetro con la opción “principal” indica si este parámetro será la referencia principal para un nuevo grupo; mientras la opción “detalle” solo  define a este parámetro como parte de un grupo."><i class="fas fa-question-circle pr-1"></i>Ayuda</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dropdown-divider"></div>
                <form>
                    <div class="row">
                        @*<div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-codigo">CÓDIGO</label>
                                <input class="form-control" type="text" id="txt-codigo" placeholder="Ingrese su codigo" aria-describedby="inputGroup7" required>
                            </div>
                        </div>*@
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="txt-parametro">NOMBRE PARÁMETRO</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <input class="form-control" type="text" maxlength="120" id="txt-parametro" placeholder="Ingrese el nombre del parámetro" aria-describedby="inputGroup6" required>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="cbo-parent">PARENT PARÁMETRO</label>
                                <select class="form-control" id="cbo-parent">
                                    <option value="0">-Seleccione un parent parámetro-</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="cbo-tipo-parametro">TIPO DE PARÁMETRO</label>
                                <select class="form-control" id="cbo-tipo-parametro">
                                    <option value="0">-Seleccione un tipo de parámetro-</option>
                                    <option value="1">Principal</option>
                                    <option value="2">Detalle</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">                        
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label class="font-weight-bold" for="cbo-estado">ESTADO</label><span class="text-danger font-weight-bold">&nbsp;(*)&nbsp;</span>
                                <select class="form-control" id="cbo-estado" aria-describedby="inputGroup10" required>
                                    <option value="-1">-Seleccione un estado-</option>
                                    <option value="1">Habilitado</option>
                                    <option value="0">Deshabilitado</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xm-12 col-sm-12 col-md-4 col-lg-4"></div>
                    </div>
                    <div class="dropdown-divider"></div>
                    <div class="row">
                        <div class="col-6"></div>
                        <div class="col-xm-12 col-sm-12 col-md-6 col-lg-6 seccion-mensaje">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xm-12 col-sm-12 col-md-6 col-lg-6"><small class="text-danger d-block"><strong>(*)&nbsp; Campos obligatorios</strong></small></div>
                        <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3 text-right"><a class="btn btn-plomo w-100 mb-3" href="@Url.Action("Index", "Parametro")">Regresar</a></div>
                        <div class="col-xm-12 col-sm-12 col-md-3 col-lg-3 text-right">
                            <button class="btn btn-info w-100 mb-3" id="btn-grabar" type="button" href="javascript:void(0)">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="identificador" value="@id" />

<script type="text/javascript">
    var parametro = @Html.Raw(JsonConvert.SerializeObject(parametro));
    var listaParametro = @Html.Raw(JsonConvert.SerializeObject(listaParametro));
</script>

